<div>
  <div>
    <h1>
      Delivery Tracker
    </h1>
  </div>
</div>

<div>
  <p>Know if something gets lost in the mail.</p>
  <hr>

  <div>
    <div>
      <h2>
        Expecting a package?
      </h2>

      <form action="/insert_delivery" method="post">
        <div>
          <label for="description_field">Description</label>

          <input type="text" id="description_field" name="query_description">

        </div>

        <div>
          <label for="supposed_to_arrive_on_box">
            Suppose to arrive on
          </label>

          <input type="date" id="supposed_to_arrive_on_box" name="query_supposed_to_arrive_on">
        </div>

        <div>
          <label for="details_box">
            Details
          </label>

          <textarea id="details_box" name="query_details" rows="3"></textarea>
        </div>
        <button>
          Log delivery
        </button>
      </form>

    </div>
  </div>

  <hr>

  <h2>Waiting on</h2>

  <% @list_of_deliveries.each do |package| %>
    <ul>

      <li>
        <div><%= package.description %></div>
        <div>Supposed to arrive on <%= package.supposed_to_arrive_on %></div>
        <div><%= package.details %></div>
                <div>
          <form action="/modify_delivery/<%= package.id %>" method="post">
            <input type="hidden" name="arrived" value="true">
            <button>Mark as received</button>
          </form>
        </div>

      </li>
    </ul>
  <% end %>

<hr>

<div>
<h2>Received</h2>
